
<div class="card-wide" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/collection/312299/');">
  <div class="card-category"><%= @restaurant.category %></div>
  <div class="card-description">
    <h2><%= @restaurant.name %></h2>
    <p><%= @restaurant.address %></p>
    <p><%= @restaurant.phone_number %></p>
    </div>
    <%= link_to 'Add a review', new_restaurant_review_path(@restaurant), class: "button-white" %>
  
</div>


<div class="wrapper">
<div class="container">
  <div class="row">
      <h2>Reviews</h2>
          <ol>
            <% @restaurant.reviews.each do |review| %>
              <li><%= "#{review.content} RATING:#{review.rating} " %><i class="fa fa-star" aria-hidden="true"></i></li>
              <% end %>
          </ol>
  </div>
</div>
</div>








